<div class="container">
<p id="notice"><%= notice %></p>

<h1>Listing Feeds</h1>

<table class="table">
  <thead>
    <tr>
      <th >Name</th>
      <th>Url</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feeds.each do |feed| %>
      <tr>
        <td><%= feed.name %></td>
        <td><%= feed.url %></td>
        <td><%= feed.description %></td>
        <td>
          <%= link_to 'Show', feed %>
          <%= link_to 'Edit', edit_feed_path(feed) %>
          <%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%= link_to 'Entries', entries_path(feed) %>   
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feed', new_feed_path %>
</div>
